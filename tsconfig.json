{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.mts", "hack/packets.mts"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2023"],
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  }
}
